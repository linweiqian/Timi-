.catogray-box{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  left: 0px;
  bottom: 0px;
  background-color: #F9F9F9;
  text-align: center;
}
/* 左侧栏 */
.box-left{
  position: relative;
  width: 30%;
  height: 100%;
  color: #6C6C6C;
  font-size: 14px;
  float: left;
  background-color:#fff;
  
}
.nav-items{
  width: auto;
  height: auto;
  border-bottom: 1px solid #E3E3E3;
  padding: 10px 0px;
  background-color: #F9F9F9;
}
/* 右侧栏 */
.box-right{
  width: 65%;
  height: 1000px;
  position: absolute;
  top: 0px;
  right: 0px;
  margin: 15px;
  float: left;
}
.sel-shop{
  width: 33.3%;
  float: left;
}
.sel-shop image{
  width: 60px;
  height: 60px;
}
.sel-shop text{
  font-size: 12px;
}
.active{
  background-color: pink;
}
.nodata_text{
  font-size: 12px;
  color: #F89C19;
}