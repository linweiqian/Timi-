.my-box {
  width: 100%;
  padding-top: 20px;
  display: flex;
  justify-content: center;
  padding-bottom: 30px;
  position: relative;
}

.my-box .img {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  overflow: hidden;
}

.my-box .img image {
  width: 100px;
  height: 100px;
}

.my-box .login-name {
  position: absolute;
  bottom: 0px;
}

.list {
  margin: 15px;
  padding: 15px;
  background-color: #f1f1f1;
 
}

.list .li {
  width: 100%;
  height: 30px;
  padding-top: 5px;
  padding-bottom: 5px;
  border-bottom: 1px solid white;
  color: #f89c19;
  position: relative;
  line-height: 30px;
}

.list .li icon {
  position: absolute;
  right: 0px;
  top: 0px;
}
